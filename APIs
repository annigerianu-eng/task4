<!DOCTYPE html>
<html>
<body>
    <h2> Small Web APIs Demo</h2>

    
    <h3> Geolocation</h3>
    <button onclick="getLocation()">Where am I?</button>
    <p id="geo"></p>

    
    <h3>Web Storage</h3>
    <button onclick="saveName()">Save</button>
    <button onclick="showName()">Show</button>
    <p id="storage"></p>

   
    <h3> Drag & Drop</h3>
    <div id="box" style="width:100px;height:100px;border:2px solid black;margin-bottom:10px;" 
         ondrop="drop(event)" ondragover="allowDrop(event)"></div>
    <div id="drag" draggable="true" ondragstart="drag(event)" 
         style="width:80px;height:80px;background:red;color:white;text-align:center;line-height:80px;">
        Drag
    </div>

    <script>
        
        function getLocation() {
            navigator.geolocation?.getCurrentPosition(p => 
                document.getElementById("geo").innerHTML = 
                `Lat: ${p.coords.latitude}<br>Lng: ${p.coords.longitude}`
            );
        }

      
        function saveName() {
            localStorage.setItem("user", "John");
            document.getElementById("storage").innerHTML = "Saved!";
        }
        function showName() {
            document.getElementById("storage").innerHTML = localStorage.getItem("user");
        }

       
        function allowDrop(e) { e.preventDefault(); }
        function drag(e) { e.dataTransfer.setData("text", e.target.id); }
        function drop(e) {
            e.preventDefault();
            e.target.appendChild(document.getElementById(e.dataTransfer.getData("text")));
        }
    </script>

    <hr>
    <p><cite>Mini Web APIs Demo</cite></p>
</body>
</html>
